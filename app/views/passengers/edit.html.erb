<% if @passenger.errors.any? %>
  <ul class="errors">
    <% @passenger.errors.each do |column, message| %>
      <li>
        <strong> <%= column.capitalize %> </strong> <%= message %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= render partial: "form", locals: { action_name: "Edit", name: "#{@passenger.name}", phone_number: "#{@passenger.phone_num}" }%>

