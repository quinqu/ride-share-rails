
<p class="form-header">Please provide the following information about a driver: </p>


<div class="form">
  <%= form_with model: @driver do |f| %>

  <%= f.label "Name:" %>
  <%= f.text_field :name %>

  <%= f.label "Vin:" %>
  <%= f.text_field :vin %>


  <%= f.submit "#{action_name} Driver", class: "driver-button" %>
</div>
<% end %>