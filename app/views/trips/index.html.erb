 
 <h2> All Trips </h2>
  <table>
    <tr>
      <th>Date</th>
      <th> Driver </th>
      <th> Passenger </th>
      <th> Cost </th>
      <th> Rating </th>
      <th> Details </th>

    </tr>
 <% @trip.each do |trip| %>
    <tr>
      <td><%= trip.date%> </td>

      <% driver = Driver.find_by(id: trip.driver_id) %>
      <td><%= link_to driver.name, driver_path(driver), method: :get %>  </td>

    <% passenger = Passenger.find_by(id: trip.passenger_id) %>
  
    <%if passenger.nil? %>
        <td> (DELETED) </td>
    <%else%>
      <td><%= link_to passenger.name, passenger_path(passenger), method: :get %>  </td>
    <%end %>

      <td>$<%=sprintf('%.2f', trip.cost )%></td>
      <td><%= trip.rating %></td>
      <td> <% link_to "Trip Details", trip_path(trip), method: :get  %> </td>
    </tr>
  <%end %>
</table> 